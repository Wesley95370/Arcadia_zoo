{% extends 'base.html.twig' %}

{% block title %}Tableau de bord Admin - Arcadia Zoo{% endblock %}

{% block body_class %}admin-page{% endblock %}

{% block extra_stylesheets %}
    <style>
        .admin-page body {
            background-color: #F1E7D0 !important;
        }
        .admin-page .dashboard-container {
            padding: 20px !important;
            max-width: 1200px !important;
            margin: 0 auto !important;
        }

        .admin-page .dashboard-navbar {
            background-color: #F1E7D0 !important;
            padding: 10px 20px !important;
            display: flex !important;
            justify-content: center !important;
            align-items: center !important;
            margin: 20px auto !important;
            max-width: 1200px !important;
            border-radius: 5px !important;
        }

        .admin-page .dashboard-navbar ul {
            list-style: none !important;
            display: flex !important;
            gap: 15px !important;
            margin: 0 !important;
            padding: 0 !important;
        }

        .admin-page .dashboard-navbar a {
            font-family: 'Caveat', cursive !important;
            font-size: 20px !important;
            text-decoration: none !important;
            color: #333 !important;
            padding: 5px 15px !important;
            border-radius: 5px !important;
            background-color: #F1E7D0 !important;
            transition: background-color 0.3s, color 0.3s !important;
        }

        .admin-page .dashboard-navbar a:hover {
            background-color: #8B5E3C !important;
            color: white !important;
        }

        .admin-page .visits-section table {
            width: 100 !important;
            border-collapse: collapse !important;
        }

        .admin-page .visits-section th,
        .admin-page .visits-section td {
            border: 1px solid #ddd !important;
            padding: 8px !important;
        }

        .admin-page .user-form-section {
            margin-top: 20px !important;
        }

        .admin-page .user-form-section label {
            display: block !important;
            margin: 10px 0 5px !important;
        }

        .admin-page .user-form-section input,
        .admin-page .user-form-section select {
            width: 100 !important;
            padding: 8px !important;
            margin-bottom: 10px !important;
        }

        .admin-page .alert {
            padding: 10px !important;
            margin-top: 10px !important;
            border-radius: 4px !important;
        }

        .admin-page .alert-success {
            background-color: #d4edda !important;
            color: #155724 !important;
        }

        .admin-page .alert-danger {
            background-color: #f8d7da !important;
            color: #721c24 !important;
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'components/navbar.html.twig' %}

    <div class="dashboard-container">
        <h1>Tableau de bord Admin - {{ admin_name }}</h1>

        <nav class="dashboard-navbar">
            <ul>
                <li><a href="{{ path('admin_animals') }}">Animaux</a></li>
                <li><a href="{{ path('admin_habitats') }}">Habitats</a></li>
                <li><a href="{{ path('admin_services') }}">Services</a></li>
                <li><a href="{{ path('admin_schedule') }}">Horaires</a></li>
                <li><a href="{{ path('admin_reports') }}">Rapports Vétérinaires</a></li>
                <li><a href="{{ path('admin_create_user') }}">Créer un utilisateur</a></li>
            </ul>
        </nav>

        <div class="visits-section">
            <h2>Visites par animal</h2>
            {% if animals|length > 0 %}
                <table>
                    <thead>
                        <tr>
                            <th>Animal</th>
                            <th>Nombre de visites</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for animal in animals %}
                            <tr>
                                <td>{{ animal.name }}</td>
                                <td>{{ animal.visits|default(0) }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p>Aucun animal enregistré pour le moment.</p>
            {% endif %}
        </div>

        <div class="user-form-section">
            <h2>Création d'un compte</h2>
            <form method="post" action="{{ path('admin_create_user') }}">
                <label for="role">Type de compte :</label>
                <select id="role" name="role">
                    <option value="ROLE_VETERINAIRE">Compte vétérinaire</option>
                    <option value="ROLE_EMPLOYE">Compte employé</option>
                </select>

                <label for="admin-email">Email :</label>
                <input type="email" id="admin-email" name="email" placeholder="Entrez l'email..." required>

                <label for="admin-password">Mot de passe :</label>
                <input type="password" id="admin-password" name="password" placeholder="Entrez le mot de passe..." required>

                <button type="submit">Créer</button>
            </form>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
    </div>

    {% include 'components/footer.html.twig' %}
{% endblock %}